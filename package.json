{
  "name": "scaffold",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "build": "npm run html && npm run sass && npm run img && npm run js",
    "watch": "babel-node tools/watch",
    "start": "npm run build && concurrently \"npm run watch\" \"node-sass -w src/css -o build/static/css\" \"browser-sync start -s \"build\" -f \"build\" --no-notify\"",
    "serve": "browser-sync start -s \"build\" -f \"build\" --reload-debounce 1000",
    "test": "cross-env NODE_ENV=test node node_modules/jest/bin/jest.js --forceExit --detectOpenHandles",
    "js": "browserify src/js/app.js -o build/static/js/app.js -t [ babelify ]",
    "js:watch": "babel-node tools/js/watch",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "sass": "node-sass src/css -o build/static/css",
    "html": "babel-node tools/dom",
    "css": "babel-node tools/css",
    "img": "babel-node tools/img",
    "build-storybook": "build-storybook"
  },
  "browserslist": [
    "ie >= 9",
    "ie_mob >= 10",
    "ff >= 20",
    "chrome >= 4",
    "safari >= 7",
    "opera >= 23",
    "ios >= 7",
    "android >= 4.4",
    "bb >= 10"
  ],
  "jest": {
    "verbose": true,
    "preset": "jest-puppeteer"
  },
  "author": "stormid",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "autoprefixer": "^9.3.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "chokidar": "^2.0.4",
    "clean-css-cli": "^4.2.1",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "fs-extra": "^7.0.1",
    "http-server": "^0.11.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "jest": "^23.6.0",
    "jest-axe": "^3.1.0",
    "jest-environment-node": "^23.4.0",
    "jest-environment-puppeteer": "^3.5.1",
    "jest-puppeteer": "^3.5.1",
    "microbundle": "^0.7.0",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.10.0",
    "postcss": "^7.0.6",
    "preact-render-to-json": "^3.6.6",
    "preact-render-to-string": "^4.1.0",
    "puppeteer": "^1.10.0",
    "storm-storybook-markup": "^0.1.0",
    "terser": "^3.10.12",
    "@storybook/html": "^4.1.6"
  },
  "dependencies": {
    "@storybook/addon-a11y": "^4.0.4",
    "@storybook/html": "^4.0.4",
    "es6-object-assign": "^1.1.0",
    "promise-polyfill": "^8.1.0"
  }
}
